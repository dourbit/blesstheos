#!/usr/bin/env bash

# Require 2 args
if [[ $# -lt 2 ]]; then
  echo "Usage: $(basename $0) user/repo file-path [save-to-dir or ./] [branch or master]"
  exit 1
fi

REPOPATH=$1
FILEPATH=$2
FILENAME=$(basename ${FILEPATH})
SAVE_DIR=${3-"./"}
BRANCH=${4-"master"}

GET_THIS="https://raw.githubusercontent.com/${REPOPATH}/${BRANCH}/${FILEPATH}"

mkdir -p $SAVE_DIR
cd $SAVE_DIR
curl -LO $GET_THIS
chmod +x $FILENAME
cd - > /dev/null

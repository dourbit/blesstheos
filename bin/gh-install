#!/usr/bin/env bash

# Require 2 args
if [[ $# -lt 2 ]]; then
    echo "Usage: $(basename $0) user/repo file-name [branch or master] [save-to-dir or .]"
    exit 1
fi

REPOPATH=$1
FILENAME=$2
SAVE_DIR=${3-"."}
BRANCH=${4-"master"}

GET_THIS="https://raw.githubusercontent.com/${REPOPATH}/${BRANCH}/${FILENAME}"

mkdir -p $SAVE_DIR
pushd $SAVE_DIR
curl -O $GET_THIS
chmod +x $FILENAME
popd

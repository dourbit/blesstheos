#!/usr/bin/env bash

. $(dirname $0)/tre-functions

function matching {
  val=$1 && shift
  for wanted in ${@}; do
    [[ "$val" =~ .*${wanted}.* ]] && return 0
  done
  return 1
}

function t-tracker {
  if [[ $1 == "not" ]]; then
    NOT=true
    shift 1
  fi
  while IFS= read -r ID; do
    TRACKER=`tre -t "$ID" --info-trackers | grep "Tracker 0: "`
    if [[ $NOT == true ]]; then
      matching "$TRACKER" "${@}" || echo $ID
    else
      matching "$TRACKER" "${@}" && echo $ID
    fi
  done
}

tre-ids-pipe t-tracker ${@}

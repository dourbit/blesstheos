#!/usr/bin/env bash

if check-x brew; then
  specho Homebrew ...
  brew outdated
fi

if onLinux && check-x apt; then
  specho Apt ...
  apt list --upgradeable
fi

# TODO: Write a node-upgradeable function, and add to src/node.sh to use here.

if check-x lein; then
  specho Leiningen User Profiles ...
  lein ancient check-profiles ~/.lein/profiles.clj 2>/dev/null
fi

#!/usr/bin/env bash

# Using: check-x; onApt; sudoUse
holy-dot bin-fn/check-x src/install src os util

if onApt; then
  sudoUse
  check-x nvim && echo "Notice: nvim is already installed" && type nvim
  sudo apt install -y neovim
elif brewOn; then
  # notice how apt is preferable
  brew install neovim
else
  exit 1
fi

type nvim

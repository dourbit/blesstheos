#!/usr/bin/env bash

# Using: sudoUse; onApt; snapOn; flatpakOn
holy-dot src/install src os util

status=0
sudoUse

specho "Audio / Music Apps..."
flatpakOn && flatpak install flathub org.gnome.Lollypop \
  || noInstall Lollypop

specho "Podcast Apps..."
flatpakOn && flatpak install flathub org.gpodder.gpodder \
  || noInstall gPodder

specho "Video Apps..."
snapOn && sudo snap install vlc \
  || onApt && sudo apt install -y vlc \
  || noInstall VLC

specho "Ebook Apps..."
snapOn && sudo snap install foliate \
  || noInstall Foliate

specho "Conference..."
onApt && cd /tmp && wget https://zoom.us/client/latest/zoom_amd64.deb \
  && sudo apt install -y ./zoom_amd64.deb \
  && rm ./zoom_amd64.deb && cd - \
  || noInstall Zoom

echo
exit $status
